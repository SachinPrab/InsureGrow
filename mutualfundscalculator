<!DOCTYPE html>
<html>
<head><b><u> Mutual Funds Calculator </b></u></head>
<link rel="stylesheet" type="text/css" href="mutualfundscalcstyle.css">
<body>
<div class="calculator">
  <h2>Mutual Fund Calculator</h2>
  <form>
    <label for="principal">Initial Investment Amount:</label>
    <input type="number" id="principal" name="principal" required>

    <label for="monthly-investment">Monthly Investment Amount:</label>
    <input type="number" id="monthly-investment" name="monthly-investment" required>

    <label for="num-years">Number of Years:</label>
    <input type="number" id="num-years" name="num-years" required>

    <label for="annual-return">Annual Return Rate:</label>
    <input type="number" id="annual-return" name="annual-return" step="0.01" min="0" max="100" required>

    <button type="button" onclick="calculate()">Calculate</button>
  </form>
  <div id="result"></div>
</div>
<script>
function calculate() {
  var principal = Number(document.getElementById("principal").value);
  var monthly_investment = Number(document.getElementById("monthly-investment").value);
  var num_years = Number(document.getElementById("num-years").value);
  var annual_return = Number(document.getElementById("annual-return").value) / 100;

  var total_investment = principal + monthly_investment * 12 * num_years;
  var monthly_return = Math.pow(1 + annual_return / 12, 12 / 12) - 1;
  var final_value = total_investment * Math.pow(1 + monthly_return, num_years * 12);

  var result = document.getElementById("result");
  result.innerHTML = "The final value of your mutual fund after " + num_years + " years is: $" + final_value.toFixed(2);
}
</script>
</body>
</html>
